SIMULATE 1

grupos FUNCTION RN1,D
0.1 1
0.4 2
0.75 3
0.95 4
1 5
LET X$turn=0
DRK CAPACITY 28
	GENERATE 0.7,0.35
	LET P$group=FN$grupos
	LET+ x$wait,P$group
	ARRIVE Cola
	LET+ x$cont,P$group
	ENTER DRK,P$group
	WAITIF Cic=U
	DEPART Cola
	ADVANCE 2,0.5
	LEAVE DRK,P$group
	TERMINATE 

	GENERATE ,,,1
Ciclo	SEIZE Cic
Tren	ADVANCE 1.8
	RELEASE Cic
	LET+ x$turn,1
	MATRIX x$turn,1,x$wait
	GOTO Ciclo

	GENERATE 180
	TERMINATE 1

START 1
END
